<main>
   <div class="flex justify-space-between gray">
      <h3>Welcome, {{dbgameboardstates.0.user.username}}! </h3> 
      <h3>ID: {{dbgameboardstates.0.user.id}}</h3>
   </div>
   <div class="justify-space-between">
      <p>You are now logged in.</p> {{!-- <button id="logout">Log out</button> --}}
   </div>

   {{#each dbgameboardstates as |gbstate|}}
   <div class="card-all-round text-center ">
      <h5>Your Last Bet Amount: ${{ bet_amount}}</h5> 
      <div class="flex">
         <div>
            <img class="dice" src='{{dice_1_image_path }}' />
         </div>
         <div>
            <img class="dice" src='{{ dice_2_image_path }}' />
         </div>
         <div>
            <img class="dice" src='{{dice_3_image_path}}' />
         </div>
         <div>
            <img class="dice" src='{{dice_4_image_path}}' />
         </div>
         <div>
            <img class="dice" src='{{dice_5_image_path}}' />
         </div>
         <div>
            <img class="dice" src='{{dice_6_image_path}}' />
         </div>
      </div>               
   </div>
    
   <div class="text-left gray headline-font-style">
   <h3>Account Balance: <span class="no-bold"> ${{account_balance}} </span></h3>
   <p class="bold-lifted">Current Message: <span class="no-bold blue">  {{prize_winning_prompt}} </span></p>
   </div>

   <div class="card-all-round flex">
      <div class="w25 grow5">&nbsp;</div>
      <div class="w25 grow1">
         <form id="start_game_form" class='grow1' ></form>
            <div class='flex column m1 text-center'>
               {{!-- <a href="/gameboardlive?account_balance={{account_balance}}&user_name={{user.username}}" class='btn bg-blue white p1 rounded text-center'>&nbsp;Start Game Now!&nbsp;</a> --}}
               <label class="gray">Account Balance must be greater than 0.00 to play:</label><br> 
               <label htmlFor='cash'>Add Money to Your Bank?</label><br> 
               <input type="text" id='cash' name='cash' class='input text-center' /><br>
               <a href="/dashboard/edit/{{gbstate.id}}" class="edit-link btn bg-blue white p1 rounded text-center" id="edit-link">Start Game</a>
            </div>
         </form>
      </div>
      <div class="w25 grow5">&nbsp;</div>
   </div> 
   {{/each}}  
  
</main>


