<main>
    <div class='flex column gray headline-font-style'>
      <div class="justify-space-between">
         <h3 class="stresstext text-center">Rolling Dice Gameboard {{user.username}} </h3>  
         <p>You are now logged in.</p> {{!-- <button id="logout">Log out</button> --}}
      </div>
 
      <div class="card-all-round text-center ">
         <div class="flex"> 
            <div>
               <img class="dice" src='/images/DiceOne.png' />
            </div>
            <div>               
               <img class="dice" src='/images/DiceTwo.png' />
            </div>
            <div>
               <img class="dice" src='/images/DiceThree.png' />
            </div>
            <div>
               <img class="dice" src='/images/DiceFour.png' />
            </div>
            <div>
               <img class="dice" src='/images/DiceFive.png' />
            </div>
            <div>
               <img class="dice" src='/images/DiceSix.png' />
            </div>
         </div>                
      </div>
      {{!-- {{#each dbgameboardstates as |gbstate|}} --}}
      <div class="card-all-round text-center ">
         <div class="flex">
            <div>
               <img class="dice" src='{{dbgameboardstates.0.dice_1_image_path }}' />
            </div>
            <div>
               <img class="dice" src='{{ dice_2_image_path }}' />
            </div>
            <div>
               <img class="dice" src='{{dice_3_image_path}}' />
            </div>
            <div>
               <img class="dice" src='{{dice_4_image_path}}' />
            </div>
            <div>
               <img class="dice" src='{{dice_5_image_path}}' />
            </div>
            <div>
               <img class="dice" src='{{dice_6_image_path}}' />
            </div>
         </div>  
      </div>
      {{!-- {{/each}}   --}}
      <div class="text-left gray headline-font-style">
      <h3>Account Balance: <span class="no-bold">  ${{account_balance}}</h3>
      <p class="bold-lifted">Current Message: <span class="no-bold blue">  {{game_message}}  </span></p>
      </div>
   
      <div class="card-all-round flex">
         <div class="w25 grow5">&nbsp;</div>
         <div class="w25 grow1">
            <form id="edit-game-form" class='grow1 text-center' >
               <div class='flex column m1'>
                  <label htmlFor='cash'>Enter Your Bank:</label><br> 
                  <input type="text" id='cash' name="cash" class='input text-center' /><br>

                  <label htmlFor='bet_amount'>Enter Bet Amount:</label><br> 
                  <input type="text" id='bet_amount' name="bet_amount" class='input text-center' /><br>

                  <button type='submit' class='btn bg-blue white p1 rounded' >Save (Roll Dices) !</button>
                  <p>Roll the dices to get the new paths to dice images per random-number generator, then save them </p>
               </div>
            </form>
         </div>
         <div class="w25 grow5">&nbsp;</div>
      </div>
   </div>      
</main>

